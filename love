            const container = document.querySelector('.pot-container');
            const hearts = ['üå∏', '‚ú®', '‚ô•', '‚≠ê', '‚òÅÔ∏è'];
            for (let i = 0; i < 12; i++) {
                const p = document.createElement('div');
                p.className = 'luck-particle';
                p.innerText = hearts[Math.floor(Math.random() * hearts.length)];
                p.style.left = (Math.random() * 100 + 100) + 'px';
                p.style.top = '100px';
                p.style.fontSize = (Math.random() * 20 + 10) + 'px';
                p.style.animationDelay = (Math.random() * 0.5) + 's';
                container.appendChild(p);
                setTimeout(() => p.remove(), 2000);
            }
        }

        // ‡πÅ‡∏ó‡∏£‡∏Å‡∏Å‡∏≤‡∏£‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡πÉ‡∏ä‡πâ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÉ‡∏ô‡∏à‡∏∏‡∏î‡∏ó‡∏µ‡πà‡∏î‡∏≠‡∏Å‡πÑ‡∏°‡πâ‡∏ö‡∏≤‡∏ô
